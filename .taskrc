# Color modifications
color.tagged=

confirmation=no

# Reporting aliases
alias.in=list +PENDING +in
alias.next=list +PENDING +next
alias.wait=list +PENDING +wait
alias.maybe=list +PENDING +maybe
alias.pend=list +PENDING

# Other aliases
alias.rm=delete
#alias.link=task add status:completed +link
#alias.note=task add status:completed +note
alias.n=modify -in +next
alias.p=modify +palantir
alias.as=modify +aslan
alias.pi=modify +pilot
alias.np=modify +next +palantir
alias.nas=modify -in +next +aslan
alias.npi=modify -in +next +pilot
alias.m=modify -in +maybe
alias.wa=modify -in -next +wait
alias.wa=modify -in -next +wait

# Notes report
# I don't like how it lists all annotations
uda.url.type=string
uda.url.label=URL
uda.detail.type=string
uda.detail.label=Detail
report.notes.descritpion=Notes
report.notes.columns=end,tags,description,url,detail
report.notes.labels=Created,Tags,Description,Url,Detail
report.notes.filter=status:completed (+note or +link)

context.work=+palantir or +aslan or +pilot or +in
context.dcn=-palantir -aslan -pilot
